<?php
    $str = "dfhghfgdhdgfj";
    $strLen = strlen($str);
    $result = [];
    if ($strLen > 0) {
        $lenEven = $strLen%2==0;
        for($i=0; $i<$strLen; $i=$i+2) {
            $result[] = substr($str,$i,2);
        }
        if(!$lenEven) {
            $lastKey = array_key_last($result);
            $result[$lastKey] = $result[$lastKey]."_";
        }
    }

    print_r($result);


